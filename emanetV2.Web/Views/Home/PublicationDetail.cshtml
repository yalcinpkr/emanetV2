@model emanetV2.Web.Models.PublicationDetailViewModel

@{
    ViewBag.Title = "İlan Detayları";
}

<div class="row">

    @foreach (var item in Model.Publications)
    {

        <div class="col-md-3 mx-2 my-2 style="border:solid 1px">
            <div class="card d-block" style="height:250px;">
                <img src="~/Uploads/@item.Photo" class="card-img-top" alt="@item.Title">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text">@item.Note</p>
                    <p class="card-text">@item.AnimalSize.Name</p>
                    <p class="card-text">@item.AnimalType.Name</p>
                    <a href="@Url.Action("PublicationDetail","Home","Web")" class="btn btn-primary" style="position:absolute;bottom:10px;right:15px;">Ayrıntılar</a>
                </div>
            </div>
        </div>

    }
</div>

