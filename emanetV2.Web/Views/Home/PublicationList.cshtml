@model emanetV2.Web.Models.PublicationListViewModel

@{
    ViewBag.Title = "İlanlar";
}


<div class="container-fluid" style="margin: 0px auto">
    <div class="row" style="margin-top:10%">
        <div class="col-md-12 text-center">
            <h2 class="section-heading text-uppercase">İLANLAR</h2>
            <h3 class="section-subheading text-muted">İlan detayları için ayrıntılara tıklayınız.</h3>

        </div>
    </div>
    <div class="row" style="margin-top:5%">
        @foreach (var item in Model.Publications)
        {
            
            <div class="col-md-2 mx-2 my-2">
                <div class="card d-block" style="border:solid 1px; height: 350px;">
                    <div style="overflow:hidden; width:200px; height:200px; text-align:center; margin: 0px auto; margin-top: 10px;"><img src="~/Uploads/@item.Photo" alt="@item.Title" style="height: 100%;"></div>

                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Description</p>
                        <a href="@Url.Action("İlan Detayları","PublicationDetail","Home")" class="btn btn-primary" style="position:absolute;bottom:10px;right:15px;">Ayrıntılar</a>
                    </div>
                </div>
            </div>

           
        }

    </div>
</div>

