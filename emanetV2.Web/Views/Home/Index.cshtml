@model emanetV2.Web.Models.HomePageViewModel

@{
    ViewBag.Title = "Ana Sayfa";
}

<!-- Header -->
<header class="masthead">
    <div class="container">
        <div class="intro-text">
            <div class="intro-lead-in">emaNet'iniz</div>
            <div class="intro-heading ">emaNET'imizdir.</div>

        </div>
    </div>
</header>





<!-- Portfolio Grid ilanların olduğu sayfa 1 . sırada olacak -->
<section class="bg-light page-section" id="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">YENİ İLANLAR</h2>
                <h3 class="section-subheading text-muted">Tüm İlanlar için İlanlar Sekmesine Tıklayınız...</h3>
            </div>
        </div>
        <div class="row">

            @foreach (var item in Model.LastPublications)
            {

                <div class="col-md-3 mx-2 my-2 style="border:solid 1px">
                    <div class="card d-block" style="height:450px;">
                        <img src="~/Uploads/@item.Photo" class="card-img-top" alt="@item.Title">
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">@item.Description</p>
                            <a href="@Url.Action("PublicationDetail","Home","Web")" class="btn btn-primary" style="position:absolute;bottom:10px;right:15px;">Ayrıntılar</a>
                        </div>
                    </div>
                </div>

            }
        </div>

    </div>
</section>
